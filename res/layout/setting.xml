<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/calling_bg"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/calling_title"
        >
        <Button 
            android:id="@+id/setting_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/setting_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="25dp"
            android:layout_centerInParent="true"
            android:textColor="@color/black"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/setting_layout_s"
        android:layout_margin="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >
            
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="手机号码"
	            android:textSize="15dp"
	            android:textColor="#696969"
	            android:layout_gravity="center_horizontal"/>
	        <TextView
	            android:id="@+id/setting_phone_txt"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_gravity="center_horizontal"
	            android:textColor="#696969"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/setting_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             >
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="更改"
	            android:textSize="15dp"
	            android:textColor="#4169E1"
	            android:background="#00000000"
	            android:layout_gravity="center_vertical"
	            />
	        <ImageView
	            android:layout_margin="5dp"
	            android:layout_width="10dp"
            	android:layout_height="16dp"
            	android:background="@drawable/setting_btn"/>
	        
        </LinearLayout>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/setting_myorder"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/setting_layout_s"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="我的订单"
	        android:textColor="#696969"
	        android:layout_centerVertical="true"/>
       <ImageView
	            android:layout_margin="5dp"
	            android:layout_width="10dp"
            	android:layout_height="16dp"
            	android:background="@drawable/setting_btn"
            	android:layout_alignParentRight="true"
            	android:layout_centerVertical="true"/>
       
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_layout_s"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        >
       
        <RelativeLayout
            android:id="@+id/setting_connect_service"
        	android:layout_width="fill_parent"
	        android:layout_height="50dp"
	       >
            
        <TextView 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="联系客服"
	        android:textColor="#696969"
	        android:layout_centerVertical="true"/>
       <ImageView
	            android:layout_margin="5dp"
	            android:layout_width="10dp"
            	android:layout_height="16dp"
            	android:background="@drawable/setting_btn"
            	android:layout_alignParentRight="true"
            	android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="1px" 
            android:background="@drawable/setting_line"
            />
         <RelativeLayout
            android:id="@+id/setting_update"
        	android:layout_width="fill_parent"
	        android:layout_height="50dp"
	       >
            
        <TextView 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="检查更新"
	        android:textColor="#696969"
	        android:layout_centerVertical="true"/>
       <ImageView
	            android:layout_margin="5dp"
	            android:layout_width="10dp"
            	android:layout_height="16dp"
            	android:background="@drawable/setting_btn"
            	android:layout_alignParentRight="true"
            	android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="1px" 
            android:background="@drawable/setting_line"
            />
         <RelativeLayout
        	android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:id="@+id/setting_connect_us"
	       >
            
        <TextView 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="联系我们"
	        android:textColor="#696969"
	        android:layout_centerVertical="true"/>
       <ImageView
	            android:layout_margin="5dp"
	            android:layout_width="10dp"
            	android:layout_height="16dp"
            	android:background="@drawable/setting_btn"
            	android:layout_alignParentRight="true"
            	android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    
</LinearLayout>